<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hlhj_rl_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hlhj_gradual_bg"
    tools:context=".common.HlhjMainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/hlhj_tittle"
            android:textSize="18sp"
            android:textColor="@color/hlhj_white"
            />
        <ImageView
            android:id="@+id/hlhj_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/hlhj_left"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:visibility="gone"
            android:layout_marginLeft="20dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/hlhj_pairing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="135dp"
        android:paddingStart="44dp"
        android:paddingEnd="44dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/hlhj_cor"
            android:paddingBottom="40dp"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/hlhj_iv_men"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/hlhj_circle_bg"
                android:padding="15dp"
                android:src="@mipmap/hlhj_rat" />
            <TextView
                android:id="@+id/hlhj_tv_men"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="鼠"
                android:textSize="14sp"
                android:textColor="@color/hlhj_white"
                android:drawableRight="@mipmap/hlhj_switch"
                android:drawablePadding="2dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/hlhj_btn_bg" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/hlhj_iv_women"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/hlhj_circle_bg"
                android:padding="15dp"
                android:src="@mipmap/hlhj_ox" />
            <TextView
                android:id="@+id/hlhj_tv_women"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="牛"
                android:textSize="14sp"
                android:textColor="@color/hlhj_white"
                android:drawableRight="@mipmap/hlhj_switch"
                android:drawablePadding="2dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/hlhj_btn_bg" />
        </LinearLayout>
    </RelativeLayout>
    
    <Button
        android:id="@+id/hlhj_btn_start"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/hlhj_start"
        android:textColor="@color/hlhj_normal_primary"
        android:background="@drawable/hlhj_btn_bg2"
        android:layout_marginTop="60dp"
        android:layout_below="@id/hlhj_pairing"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/hlhj_bg"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>